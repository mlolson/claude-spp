{
  "name": "claude-stp",
  "version": "0.1.0",
  "description": "Claude Code plugin for maintaining programming skills through guided learning",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "stp": "./dist/cli.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "./node_modules/.bin/tsc",
    "dev": "./node_modules/.bin/tsc --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "claude",
    "claude-code",
    "learning",
    "teaching",
    "programming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
