# <STP>
# Print Claude STP plugin stats (skip during merge/rebase)
if command -v stp &> /dev/null && [ -d "$(git rev-parse --show-toplevel)/.claude-stp" ]; then
  GIT_DIR="$(git rev-parse --git-dir)"
  # Skip if we're in the middle of a merge or rebase
  if [ ! -f "$GIT_DIR/MERGE_HEAD" ] && [ ! -d "$GIT_DIR/rebase-merge" ] && [ ! -d "$GIT_DIR/rebase-apply" ]; then
    stp stats
  fi
fi
# </STP>
